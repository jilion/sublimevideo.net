/* Trick taken here: http://stackoverflow.com/questions/7699552/how-to-create-a-3-columns-fluid-fixed-fluid-layout */

.selectors_wrap {
  position:absolute;
  top:544px;
  left:0;
  right:0;
  z-index:4;
  min-width:0px;
  padding:0 960px 0 0;
  white-space:nowrap;
  overflow:hidden;
}

.selectors_wrap .col {
  position:relative;
  display:inline-block;
  vertical-align:top;
}

.selectors_wrap .side_bg {
  width:50%;
  height:122px;
  background:url(<%= asset_path "home/slides/bar_repeat.png" %>) repeat-x;
}

.selectors_wrap ul.selectors {
  white-space:normal;
  width:960px;
  height:122px;
  list-style-type:none;
}

.selectors_wrap ul.selectors li {
  width:298px;
  height:122px;
  float:left;
  position:relative;
  text-align:center;
  background:url(<%= asset_path "home/slides/bar_repeat.png" %>) repeat-x;
}

.selectors_wrap ul.selectors li.active {
  background:none;
  width:364px;
}

.selectors_wrap ul.selectors li .l, .selectors_wrap ul.selectors li .r {
  width:1px;
  background:rgba(0,0,0,0.5);
  height:122px;
  position:absolute;
  z-index:1;
  top:0;
  @include box-shadow(rgba(255,255,255,0.06) 1px 0 0);
}

.selectors_wrap ul.selectors li .l {
  display:none;
  left:0;
}

.selectors_wrap ul.selectors li.s_1 .l {display:block}

.selectors_wrap ul.selectors li .r {
  right:0;
}

.selectors_wrap ul.selectors li.active .l,
.selectors_wrap ul.selectors li.active .r {
  width:23px;
  @include box-shadow(none);  
}

.selectors_wrap ul.selectors li.active .l {
  display:block;
  left:-1px;
  background:url(<%= asset_path "home/slides/left_rounded.png" %>) no-repeat;
}

.selectors_wrap ul.selectors li.active .r {
  right:-1px;
  background:url(<%= asset_path "home/slides/right_rounded.png" %>) no-repeat;
}

.selectors_wrap ul.selectors li a {
  color:#c1d3f0;
  font-size:19px;
  font-weight:600;
  line-height:24px;
  position:relative;
  z-index:2;
  padding:24px 50px;
  display:block;
  text-shadow:rgba(0,0,0,0.8) 0 -1px 0;
  -webkit-font-smoothing:antialiased;
  @include transition(0.5s, color, linear);
}

.selectors_wrap ul.selectors li a:hover {
  color:#fff;
}

.selectors_wrap ul.selectors li.active a {
  color:#fff;
  text-shadow:rgba(0,0,0,0.6) 0 -1px 0, rgba(255,255,255,0.6) 0 0 5px;
}

