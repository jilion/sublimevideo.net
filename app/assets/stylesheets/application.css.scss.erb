#slides {
  width:1100px;
  height:666px;
  position:absolute;
  top:0;
  left:-50px;
  z-index:1;
}

#slides .slide {
  width:1100px;
  height:666px;
  position:relative;
  display:none;
}

#slides .slide.active {display:block}

#slides .slide.s_1 {
  background:url(<%= asset_path "home/slides/panes/pane_1.png" %>) no-repeat;
}

#slides .slide.s_2 {
  background:url(<%= asset_path "home/slides/panes/pane_2.png" %>) no-repeat;
}

#slides .slide.s_3 {
  background:url(<%= asset_path "home/slides/panes/pane_3.png" %>) no-repeat;
}

#slides .slide .s_click {
  width:1100px;
  height:414px;
  cursor:pointer;
  position:relative;
  top:130px;
}

#slides .slide .s_wrap {
  position:absolute;
  width:960px;
  top:-30px;
}

#slides .slide h2 {
  color:#ecf3fa;
}

#slides .slide p.desc {
  color:#ecf3fa;
  text-shadow:#001941 0 1px 3px;
  -webkit-font-smoothing:antialiased;
}

#slides .slide a.learn_more {
  font-size:20px;
  font-weight:600;
  color:#fff;
  text-shadow:rgba(0,0,0,0.6) 0 -1px 0;
  display:inline-block;
  padding:9px 15px;
  border:1px solid #14010b;
  @include border-radius(6px);
}

#slides .slide a.learn_more span.icon-arrow {
  margin:1px 0 0 4px;
}

/* Slide 1 */

#slides .slide.s_1 .s_wrap {
  width:400px;
  right:80px;
  text-align:right;
}

#slides .slide.s_1 h2 {
  line-height:46px;
  font-size:38px;
  text-align:right;
  padding:26px 0 10px 20px;
}

#slides .slide.s_1 p.desc {
  font-size:18px;
  line-height:25px;
  padding:0 0 0 50px;
}

#slides .slide.s_1 a.learn_more {
  margin-top:14px;
  @include gradient(rgba(202,167,191,0.5),rgba(64,10,39,0.5),#46243d);
