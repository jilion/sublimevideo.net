.news ul.articles li.rww span.icon {background-image:url(<%= asset_path "news/logos/rww.png" %>)}
.news ul.articles li.wired span.icon {background-image:url(<%= asset_path "news/logos/wired.png" %>)}
.news ul.articles li.df span.icon {background-image:url(<%= asset_path "news/logos/daringfireball.png" %>)}

