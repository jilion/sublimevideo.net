/* = News = */
/* ======== */

.news header, .news header .shadow, .news header .lights {
  height:250px;
}

.news header h2 {
  text-align:left;
  font-size:44px;
  padding:30px 0 15px;
}

.news header p.sub {
  padding-right:120px;
}

.news #content {
  width:960px;
  margin:0 auto;
  padding-bottom:60px;
}

.news .content_left {
  float:left;
  width:580px;
  padding-right:90px;
}

.news .content_right {
  float:left;
  width:290px;
}

.news h3.title, .news h4.title {
  color:#003165;
  font-weight:600;
  font-size:38px;
}

.news h3.title {
  padding-top:40px;
}

.news h4.title {
  font-size:24px;
  padding:30px 0 10px;
}

