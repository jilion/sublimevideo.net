}

#slides .slide.s_1 a.learn_more:active {
  @include gradient(rgba(64,10,39,0.5),rgba(202,167,191,0.5),#46243d);
}

/* Slide 2 */

#slides .slide.s_2 .s_wrap {
  width:526px;
  left:416px;
  text-align:left;
}

#slides .slide.s_2 h2 {
  line-height:40px;
  font-size:34px;
  text-align:left;
  padding:36px 0 5px;
}

