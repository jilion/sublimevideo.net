}

.news p.desc a {
  color:#1185ff;
  border-bottom:1px solid #81bbfc;
}

.news ul.featured_by {
  line-height:30px;
  font-size:18px;
}

.news ul.related li {
  padding:10px 30px 10px 0;
}

.news ul.related a {
  font-size:18px;
}

.news ul.related li p.desc {
