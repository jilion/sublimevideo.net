@import "bourbon";

$darkblue:#242c3b;

#page {
  width:100%;
}

header {
  padding:27px 30px 25px;
}

.l-dark {
  background:$darkblue;
  color:#505b78;
}

.l-dark a {
  color:#7690B3;
}

.l-dark a:hover {
  color:#fff;
}

.l-full-width-wrap {
  width:90%;
  margin:0 auto;
  max-width:1100px;
}

.l-site-logo {
  float:left;
  @media screen and (max-width: 900px) {
    float:none;
    text-align:center;
  }
}

.l-inline {
  display:inline-block;
}

.l-inline ul > li {
  display:inline-block;
}

.l-stacked > * {
  display:block;
}

.l-popup {
  position:relative;
}

.l-grid > li {
  display: inline-block;
  margin: 0 10px 10px 0;
  // IE7 hack to mimic inline-block on block elements
  *display: inline;
  *zoom: 1;
}

.l-center {
  text-align:center;
}

.l-separator {
  display:block;
  height:1px;
  background:#c7d2e2;
  margin:1.3em 0;
}

.l-normal {
  font-size:1em;
  line-height:inherit;
  padding:0;
}

footer {
  padding:20px 0 50px;
  margin-top:20px;
}