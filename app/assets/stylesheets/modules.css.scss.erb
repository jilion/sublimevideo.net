@import "bourbon";

$darkblue:#003165;

// Buttons

.btn {
  display:inline-block;
  padding:0.6em 1em;
  background:#4088cb;
  color:#fff;
  font-weight:500;
  @include border-top-radius(4px);
  @include border-bottom-radius(4px);
  @include border-left-radius(4px);
  @include border-right-radius(4px);
}

.orange {
  background:#f66929;
  color:#fff;
}

.full {
  display:block;
}

// Main navigation

.main-nav {
  float:right;
  @media screen and (max-width:920px) {
    float:none;
    width:100%;
    text-align:center;
  }
}

.main-nav ul > li {
  margin:8px 16px;
  @media screen and (max-width:568px) {
    margin:4px 5px;
  }
}

.main-nav li a {
  font-size:1.3em;
  @media screen and (max-width:568px) {
   font-size:1em;
  }
}

.main-nav .l-popup > a:hover {
  color:#7690B3;
}

.main-nav li a.orange {
  color:#fff;
  font-weight:300;
  padding:0.2em 0.5em 0.3em;
}

.main-nav .l-popup > a {
  position:relative;
  z-index:3;
  cursor:default;
}

.main-nav .l-popup > a small {
  font-size:0.7em;
  margin-left:4px;
}

.main-nav .l-popup:hover .l-stacked a:hover {
  color:$darkblue;
}

.main-nav .l-popup:hover .l-stacked {
  display:block;
}

.main-nav .l-stacked {
  display:none;
  padding-top:42px;
  position:absolute;
  top:-7px;
  left:-16px;
  z-index:2;
  background:#fff;
  text-align:left;
  @include border-top-radius(4px);
  @include border-bottom-radius(4px);
  @include border-left-radius(4px);
  @include border-right-radius(4px);
  @include box-shadow(0 1px 4px 0 rgba(0,0,0,0.3));
}

.main-nav .l-stacked > li {
  margin:0 16px 8px;
}

// Headline

.headline {
  padding:30px;
  background:#93a2b9;
  font-size:3em;
  font-weight:300;
  text-align:center;
  color:#fff;
  @media screen and (max-width: 1150px) {
    padding:25px;
    font-size:2.5em;
  }
  @media screen and (max-width: 950px) {
    padding:20px;
    font-size:2em;
  }
  @media screen and (max-width:568px) {
    padding:10px;
    font-size:1.3em;
  }
}

.headline small {
  font-size:0.8em;
}

.headline a {
  display:inline-block;
  margin-right:10px;
  padding:0 18px 13px;
  background:rgba(0,0,0,0.2);
  color:inherit;
  @include border-top-radius(5px);
  @include border-bottom-radius(5px);
  @include border-left-radius(5px);
  @include border-right-radius(5px);
}

.headline a:hover {
  background:rgba(0,0,0,0.5);
}

// Tagline

.tagline {
  padding:1.3em 0 1.5em;
  text-align:center;
  @media screen and (max-width:568px) {
    padding:0.8em 0 1.2em;
  }
}

.tagline h2 {
  padding:5px 0 0;
  font-weight:300;
  font-size:2.3em;
  @media screen and (max-width:920px) {
    font-size:1.8em;
  }
  @media screen and (max-width:568px) {
    font-size:1.5em;
  }
}

.tagline .btn-wrap {
  display:inline;
  font-size:0.85em;
  @media screen and (max-width:568px) {
    font-size:1em;
    display:block;
    margin:13px 0 0;
  }
}

.tagline .btn {
  padding:0.2em 0.5em 0.3em;
  margin-right:0.25em;
  font-weight:300;
}

.tagline small {
  font-size:0.8em;
}

