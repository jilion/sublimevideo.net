@import "bourbon";

$darkblue:#003165;

$b-green:#48acb1;
$b-crimson:#f65e76;
$b-blue:#5695c5;
$b-violet:#a389d5;

// Buttons

.btn {
  display:inline-block;
  padding:0.6em 1em;
  background:#4088cb;
  color:#fff;
  font-weight:500;
  border:none;
  font-family:inherit;
  font-size:1em;
  font-weight:normal;
  cursor:pointer;
  @include border-top-radius(4px);
  @include border-bottom-radius(4px);
  @include border-left-radius(4px);
  @include border-right-radius(4px);
}

.full {
  display:block;
}

// Colors

.orange {
  background:#f66929;
  color:#fff;
}

.elec-blue {
  background:#299ae4;
  color:#fff;
}

.green {
  background:#009546;
  color:#fff;
}

// Titles

.section-title {
  font-size:3em;
  font-weight:300;
  padding:0.4em 0 0.8em;
  @media screen and (max-width:920px) {
//    font-size:1em;
  }
}


// Main navigation

.main-nav {
  float:right;
  @media screen and (max-width:920px) {
    float:none;
    width:100%;
    text-align:center;
  }
}

.main-nav ul > li {
  margin:8px 14px;
  @media screen and (max-width:568px) {
    margin:4px 5px;
  }
}

.main-nav li a {
  padding:0 8px 2px;
  font-size:1.3em;
  @media screen and (max-width:568px) {
   font-size:1em;
  }
}

.main-nav li > a.is-active {
  background:transparentize(#7690B3, 0.5);
  color:#fff;
  @include border-top-radius(4px);
  @include border-bottom-radius(4px);
}

.main-nav .l-popup > a:hover {
  color:#7690B3;
}

.main-nav li a.orange {
  color:#fff;
  font-weight:300;
  padding:0.2em 0.5em 0.3em;
}

.main-nav .l-popup > a {
  position:relative;
  z-index:3;
  cursor:default;
  padding:0;
}

.main-nav .l-popup > a small {
  font-size:0.7em;
  margin-left:4px;
}

.main-nav .l-popup:hover .l-stacked a:hover {
  color:$darkblue;
}

.main-nav .l-popup:hover .l-stacked {
  display:block;
}

.main-nav .l-stacked {
  display:none;
  padding-top:42px;
  position:absolute;
  top:-7px;
  left:-16px;
  z-index:2;
  background:#fff;
  text-align:left;
  @include border-top-radius(4px);
  @include border-bottom-radius(4px);
  @include border-left-radius(4px);
  @include border-right-radius(4px);
  @include box-shadow(0 1px 4px 0 rgba(0,0,0,0.3));
}

.main-nav .l-stacked > li {
  margin:0 16px 8px;
}

.main-nav .l-stacked > li a {
  padding:0 0 2px;
}

// Headline

.headline {
  padding:30px;
  background:#93a2b9;
  font-size:3em;
  font-weight:300;
  text-align:center;
  color:#fff;
  @media screen and (max-width: 1150px) {
    padding:25px;
    font-size:2.5em;
  }
  @media screen and (max-width: 950px) {
    padding:20px;
    font-size:2em;
  }
  @media screen and (max-width:568px) {
    padding:10px;
    font-size:1.3em;
  }
}

.headline small {
  font-size:0.8em;
}

.headline a {
  display:inline-block;
  margin-right:10px;
  padding:0 18px 13px;
  background:rgba(0,0,0,0.2);
  color:inherit;
  @include border-top-radius(5px);
  @include border-bottom-radius(5px);
  @include border-left-radius(5px);
  @include border-right-radius(5px);
}

.headline a:hover {
  background:rgba(0,0,0,0.5);
}

// Titles

h2.title {
  @media screen and (max-width:920px) {
    font-size:2em;
  }

  @media screen and (max-width:568px) {
