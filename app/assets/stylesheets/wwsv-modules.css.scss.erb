@import "bourbon";

$darkblue:#003165;
$b-blue:#5695c5;
$b-violet:#a389d5;

// Home player demo

.demo-player {
  padding:30px 0;
}

.demo-sidebar-1 {
  float:left;
  width:34%;
//  text-align:center;
  @media screen and (max-width:920px) {
    width:100%;
    float:none;
  }
}

.demo-sidebar-1 h3 {
  padding-top:10px;
}

.demo-sidebar-1 h3 em {
  display:block;
  font-size:0.42em;
  padding:5px 30px 0;
  color:#7690B3;
  @media screen and (max-width:920px) {
    display:inline;
    padding:0;
    font-size:0.6em;
  }
}

@media screen and (max-width:920px) {
  .demo-sidebar-1 .demo-box {
    display:none;
  }
}

.demo-video-player {
  width:63%;
  float:right;
  margin:0 0 25px 3%;
  position:relative;
  @include box-shadow(rgba(0,0,0,0.5) 0 1px 4px);
  @media screen and (max-width:920px) {
    width:100%;
    float:none;
    margin-left:0;
  }
}

.demo-video-player h3 {
//  position:absolute;
//  width:44%;
//  left:-50%;
  padding-top:3%;
//  text-align:right;
  font-size:1.2em;
}

.demo-choose-design li {
  width:31%;
  margin:15px 3.5% 15px 0;
  display:block;
  float:left;
}

.demo-choose-design li:nth-child(3n) {
  margin-right:0;
}

.demo-choose-design a {
//  height:56px;
  display:block;
  overflow:hidden;
  line-height:0;
  border:3px solid #fff;
  opacity:0.65;
//  text-align:center;
//  font-weight:500;
//  color:#242c3b;
  @media screen and (max-width:920px) {
    border-width:4px;
  }
  @include border-left-radius(7px);
  @include border-right-radius(7px);
  @include transition(opacity 0.3s ease-in-out);
}

.demo-choose-design a:hover {
  opacity:1;
}

.demo-choose-design li.active a {
  background:#242c3b;
  border-color:#242c3b;
  opacity:1;
//  color:#fff;
}

.demo-video-actions {
  padding-top:20px;
}

.demo-video-actions li {
  display:block;
  float:left;
  width:31%;
  margin:0 3.5% 3.5% 0;
  text-align:center;
}

.demo-video-actions li:nth-child(3n) {
  margin-right:0;
}

.demo-video-actions li a {
  display:block;
  height:56px;
  background:rgba(56,82,124,0.5);
  line-height:56px;
  font-size:0.9em;
  font-weight:500;
  color:#fff;
  @include border-top-radius(4px);
  @include border-bottom-radius(4px);
}

.demo-video-actions li.active a {
  background:#242c3b;
}

.view-all-features {
  @media screen and (max-width:920px) {
    font-size:1.1em;
    text-align:center;
  }
}

// Customers Quotes

.customers-quotes {
  position:relative;
//  height:180px;
}

.customers-quotes > li {
//  position:absolute;
//  top:0;
//  left:0;
//  height:160px;
  min-height:160px;
  padding-top:20px;
  @include transition(-webkit-filter 1s ease-in-out);
  @media screen and (max-width:1024px) {
    min-height:120px;
  }
}

.customers-quotes > li.blur {
  -webkit-filter:blur(10px);
}

.customers-quotes.list > li h5 {
  padding-bottom:1.5em;
}

.customers-quotes img {
  width:130px;
  float:left;
  margin:6px 4% 20px 10%;
  line-height:100%;
  @include border-top-radius(50%);
  @include border-bottom-radius(50%);
  @media screen and (max-width:1024px) {
    width:90px;
  }
  @media screen and (max-width:920px) {
    width:100px;
    display:block;
    float:none;
    margin:0 auto 13px;
  }
}

.customers-quotes.list img {
  margin:0 2% 0;
  @media screen and (max-width:920px) {
    margin:0 auto 13px;
  }
}

.customers-quotes blockquote {
  font-size:1.6em;
  line-height:1.7em;
  padding-right:10%;
  @media screen and (max-width:1024px) {
    font-size:1.3em;
    line-height:1.5em;
  }
  @media screen and (max-width:920px) {
    text-align:center;
    padding-right:0;
  }
}

.customers-quotes blockquote em {
  display:inline-block;
  padding-left:2%;
  font-size:0.7em;
}

.view-all-testimonials-box {
  padding:20px 0;
}

// Customers Logos

.customers-logos-box {
  width:30%;
  margin-right:3%;
  float:left;
  text-align:center;
  @media screen and (max-width:920px) {
    width:100%;
    float:none;
  }
}

.customers-logos li {
  @include display-box;
  @include box-pack(center);
  @include box-align(center);
  float:left;
  margin:0;
  width:33%;
  height:64px;
}

.customers-logos img {
  width:auto;
  max-width:80%;
  max-height:90%;
}

.horizon-box {
  width:27%;
  margin:0 3%;
  float:left;
  text-align:center;
  @media screen and (max-width:920px) {
    width:48%;
    margin:0 1%;
  }
  @media screen and (max-width:568px) {
    width:100%;
    margin:0;
    float:none;
  }
}

#lightbox_horizon {
  margin:13px auto 10px;
  display:block;
  max-width:270px;
  line-height:0;
  @include box-shadow(rgba(0,0,0,0.5) 0 1px 4px);
}

.tailor-made-box {
  width:31%;
  margin-left:2%;
  float:left;
  text-align:center;
  @media screen and (max-width:920px) {
    width:48%;
    margin:0 1%;
  }
  @media screen and (max-width:568px) {
    width:100%;
    margin:0;
    float:none;
  }
}

.tailor-made-box img {
  margin-top:10px;
}

// Features & Add-ons

.features-thumbs {
  padding:1em 0 0;
}

.features-thumbs li {
  display:block;
  float:left;
  position:relative;
  width:15%;
  height:100px;
  margin:0 2% 2% 0;
  padding:10px 0 0;
  text-align:center;
  @include border-left-radius(4px);
  @include border-right-radius(4px);
  @media screen and (max-width:568px) {
    width:47%;
    margin:0 6% 6% 0;
  }
}

.features-thumbs li:nth-child(6n) {
  margin-right:0;
}

@media screen and (max-width:568px) {
  .features-thumbs li:nth-child(2n) {
    margin-right:0;
  }
}

.features-thumbs li.empty-feature {
  opacity:0.3;
}

.features-thumbs h4 {
  font-size:0.65em;
  line-height:1em;
  position:absolute;
  bottom:12px;
  left:0;
  right:0;
  padding:0 4px;
  color:darken($b-blue,25%);
}

.features-thumbs li.addon h4 {color:darken($b-violet,25%)}

.feature-thumb-img-wrap {
  display:block;
  height:56px;
  line-height:56px;
}

.feature-thumb-img-wrap img {
  vertical-align:middle;
}

.features-list {
  padding:1em 0 0;
}

.feature {
  background:#fff;
  margin:0 0 2em;
  text-shadow:rgba(255,255,255,0.4) 0 1px 0;
  width:100%;
  @include display-box;
  @include border-top-radius(4px);
  @include border-bottom-radius(4px);
  @media screen and (max-width:568px) {
    @include box-orient(vertical);
  }
}

.feature.b-blue {background:transparentize($b-blue,0.7);color:darken($b-blue,10%);}
.feature.b-blue-alt {background:transparentize($b-blue,0.85);color:darken($b-blue,10%);}
.feature.b-violet {background:transparentize($b-violet,0.7);color:darken($b-violet,8%);}
.feature.b-violet-alt {background:transparentize($b-violet,0.85);color:darken($b-violet,8%);}

.feature-left {
//  float:left;
  width:170px;
  @include display-box;
  @include box-align(center);
  @include border-left-radius(4px);
  @media screen and (max-width:568px) {
    width:auto;
    padding:2em 0;
    @include border-top-radius(4px);
    @include border-bottom-radius(0);
  }
}

.feature.b-blue .feature-left,
.feature.b-blue .feature-box-actions a,
.feature.b-blue-alt .feature-box-actions a {background:$b-blue}
.feature.b-blue-alt .feature-left {background:lighten($b-blue,15%)}

.feature.b-violet .feature-left,
.feature.b-violet .feature-box-actions a,
.feature.b-violet-alt .feature-box-actions a {background:$b-violet}
.feature.b-violet-alt .feature-left {background:lighten($b-violet,15%)}

.feature-img {
  width:170px;
  @include box-flex(1);
}

.feature-img img {
  vertical-align:middle;
  max-width:112px;
  max-height:112px;
//  -webkit-filter: drop-shadow(0 -1px 0 rgba(0,0,0,0.3));
}

.feature-right {
  @include box-flex(1);
  margin-left:20px;
}

.feature-box-actions {
  float:right;
  text-align:center;
  margin:1em 1em 0;
  @media screen and (max-width:568px) {
    float:none;
    margin:0;
    padding:1em 1em 0 0;
  }
}

.feature-box-actions a {
//  width:86px;
  display:block;
  padding:4px 10px 5px;
  color:#fff;
  font-weight:500;
  text-shadow:rgba(0,0,0,0.2) 0 -1px 0;
  @include border-top-radius(4px);
  @include border-bottom-radius(4px);
  @media screen and (max-width:568px) {
    font-size:1.2em;
    padding:8px 0;
  }
}

//.feature-box-actions a:first-child {
//  margin-bottom:0.8em;
//}

.feature h3 {
  color:$darkblue;
  padding:0.6em 0 0.3em;
  font-size:1.7em;
}

.feature.b-blue h3 {color:darken($b-blue,25%);}
.feature.b-blue-alt h3 {color:darken($b-blue,25%);}
.feature.b-violet h3 {color:darken($b-violet,20%);}
.feature.b-violet-alt h3 {color:darken($b-violet,20%);}

.feature-bottom {
  @include display-box;
  @media screen and (max-width:920px) {
    @include box-orient(vertical);
  }
}

.feature-description {
  display:block;
  font-size:1.1em;
  line-height:1.6em;
  padding:0 1em 1em 0;
  width:54%;
  @include box-flex(1);
  @media screen and (max-width:920px) {
    width:auto;
  }
}

.feature-add-on {
  @include box-flex(1);
//  float:right;
  width:42%;
  min-width:300px;
  font-size:1.1em;
  margin:10px 1em 1em 30px;
  padding:8px;
  background:rgba(255,255,255,0.5);
  @include border-top-radius(4px);
  @include border-bottom-radius(4px);
  @media screen and (max-width:920px) {
    margin:10px 1em 30px 0;
    width:auto;
  }
  @media screen and (max-width:568px) {
    min-width:0;
  }
}

.feature-add-on-plans {
  border-collapse:collapse;
  width:100%;
  margin-bottom:8px;
}

.feature-add-on-plans tr td {
  background:rgba(255,255,255,0.7);
  padding:5px 10px;
  font-size:0.8em;
  font-weight:500;
}

.feature-add-on-plans tr.alt td {
  background:rgba(255,255,255,0.4);
}

.feature-add-on-plans tr:first-child td:first-child {
  @include border-top-radius(3px);
  @include border-right-radius(0);
}

.feature-add-on-plans tr:first-child td:last-child {
  @include border-top-radius(3px);
  @include border-left-radius(0);
}

.feature-add-on-plans tr:last-child td:first-child {
  @include border-bottom-radius(3px);
  @include border-right-radius(0);
}

.feature-add-on-plans tr:last-child td:last-child {
  @include border-bottom-radius(3px);
  @include border-left-radius(0);
}

.feature-add-on-plans tr td input[type=radio] {
  position:relative;
  top:-1px;
}

.feature-add-on-plans tr td label {
  margin-left:10px;
  margin-top:5px;
//  @include inline-block;
}

.feature-add-on-price {
  width:20%;
  text-align:center;
  border-left:1px solid rgba(0,0,0,0.04);
}

.feature-add-on button {
  float:right;
  font-size:0.8em;
  padding:0.4em 0.6em;
}

// Twitter Quotes

.twitter-quotes {
  padding-top:2em;
}

.twitter-quotes > li {
  width:29%;
  float:left;
  min-height:14em;
  padding:0 2%;
  text-align:center;
  @media screen and (max-width:900px) {
    width:46%;
  }
  @media screen and (max-width:568px) {
    width:100%;
    float:none;
    padding:1.5em 0;
    min-height:0;
  }
}

.twitter-quotes > li blockquote {
  line-height:1.5em;
  @media screen and (max-width:568px) {
    font-size:1.2em;
  }
}

.twitter-quotes > li img {
  margin:0.6em 0 0;
  @include border-top-radius(50%);
  @include border-bottom-radius(50%);
}

.twitter-quotes > li h4 {
  font-size:0.9em;
  line-height:0.8em;
  padding-top:0.1em;
}

.twitter-quotes > li em.date {
  font-size:0.7em;
  font-style:normal;
}