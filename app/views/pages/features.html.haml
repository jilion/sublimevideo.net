  %a{ id: 'advanced_features' }
  %section.column_wrap.first
    %section.hd.col.f#hd_switching
      .i_wrap= image_tag "features/hd_icon.png", alt: "HD switching"
      %h3.title= "HD switching"
      %p= "Switch SD-HD video sources with a single click using SublimeVideo's new HD Switch, built straight into the player's UI."
      %p
        = raw "#{link_to "Learn more", docs_url('hd-switching')}."
    %section.embed.col.f#embeds
      .i_wrap= image_tag "features/embed_icon.png", alt: "Embed"
      %h3.title= "Embed"
      %p= "Your audience can now easily share your videos by embedding them into their own sites or elsewhere on the web."
      %p
        = raw "#{link_to "Learn more", docs_url('embeds')}."
