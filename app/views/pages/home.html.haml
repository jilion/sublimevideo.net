= content_for :header do
  #slides
    .slide.s_1.active
      .s_click{ onclick: "location.href='/horizon-framework'" }
        .s_wrap
          %h2= "The HTML5 Video Age Starts Now"
          %p.desc
            = "Introducing SublimeVideo Horizon, the Framework that finally sparks the HTML5 Video revolution, by enabling full graphic freedom and features modularity, working perfectly on any browser and the latest mobile platforms"
          = link_to page_path('horizon-framework'), class: "learn_more" do
            = "Learn more"
            %span.icon-arrow
    .slide.s_2
      .s_click{ onclick: "location.href='/modular-player'" }
        .s_wrap
          %h2
            = "Start Assembling Your Player!"
          %p.desc= "Introducing the new modular SublimeVideo player for every website, powered by SublimeVideo Horizon™"
          = link_to page_path('modular-player'), class: "learn_more" do
            = "Learn more"
            %span.icon-arrow
    .slide.s_3
      .s_click{ onclick: "location.href='/tailor-made-players'" }
        .s_wrap
          %h2= "No limits, Just Draw your Player"
          %p.desc
            = "Web agencies and IT companies: Join our Partnership Program to provide your customers with first-rate branded players that work perfectly on any device, powered by SublimeVideo Horizon™."
            = link_to page_path('tailor-made-players') do
              = "Learn more"
              %span.icon-arrow
  #home_video{ style: "display:none" }
    .v_shadow
    = link_to "#video_horizon", class: "sublime", id: "lightbox_horizon" do
      - (1..6).each do |n|
        = image_tag "home/video/thumbs/thumb_#{n}.jpg", size: "270x152", class: "video_thumb", style: 'display:none', alt: ''
      %span.overlay
      %span.play
    %video#video_horizon{ width: 800, height: 450, style: 'display:none', poster: image_path('home/video/posters/poster_1.jpg'),  data: { uid: 'home', name: 'Home', 'action-enable' => 'true', 'embed-size' => '640x360', 'embed-url' => "//#{cdn_host}/embeds/horizon.html", 'sharing-text' => 'Check out SublimeVideo Horizon, ground-breaking HTML5 Video framework', 'sharing-url' => page_url('') } }
      <source src="http://media.sublimevideo.net/v/horizon_360p.mp4" data-quality='base' />
      <source src="http://media.sublimevideo.net/v/horizon_720p.mp4" data-quality='hd' />
      <source src="http://media.sublimevideo.net/v/horizon_360p.webm" data-quality='base' />
      <source src="http://media.sublimevideo.net/v/horizon_720p.webm" data-quality='hd' />

= content_for :middle do
  .selectors_wrap
