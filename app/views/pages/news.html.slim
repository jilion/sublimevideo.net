- @page_title = "News"

section.l-full-width-wrap
  h2.section-title= @page_title

  section.content_left
    h3.title= "Our Blog"
    ul.l-text-list
      - cached_latest_sublimevideo_news(3).each do |news|
        li
          = link_to news.title, news.url
          em.l-date
            small.icon-calendar
            = l news.date, format: :date

    p
      strong
        = link_to "http://blog.jilion.com/tags/sublimevideo" do
          ' Read the blog
          small.icon-uniF473
    .break
    h3.title= "Press Highlights"
    ul.l-text-list.l-normal-font
      li.tnw
        = image_tag "news/logos/tnw.png", alt: "The Next Web", class: "l-li-logo"
        = link_to "SublimeVideo, Grab Magic and more take the TV innovation prizes at MIPCube", "http://thenextweb.com/mipcube/2012/04/01/sublimevideo-grab-magic-and-more-take-the-tv-innovation-prizes-at-mipcube/"
        em.l-date
          small.icon-calendar
          = "The Next Web, "
          = l Time.parse("2012-04-01"), format: :date
      li.techcrunch
        = image_tag "news/logos/techcrunch.png", alt: "TechCrunch", class: "l-li-logo"
        = link_to "SublimeVideo's Cloud-Based HTML5 Player Goes Freemium", "http://techcrunch.com/2011/11/29/sublimevideos-cloud-based-html5-player-goes-freemium/"
        em.l-date
          small.icon-calendar
          = "TechCrunch, "
          = l Time.parse("2011-11-29"), format: :date
      li.rww
        = image_tag "news/logos/rww.png", alt: "ReadWrite", class: "l-li-logo"
        = link_to "Top Trends of 2011: HTML5", "http://www.readwriteweb.com/archives/top_trends_of_2011_html5.php"
        em.l-date
          small.icon-calendar
          = "ReadWrite, "
          = l Time.parse("2011-07-26"), format: :date
      li.wired
        = image_tag "news/logos/wired.png", alt: "Wired", class: "l-li-logo"
