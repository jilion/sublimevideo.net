          = l Time.parse("2010-02-02"), format: :date
      li.rww
        = image_tag "news/logos/rww.png", alt: "ReadWrite", class: "l-li-logo"
        = link_to "SublimeVideo: Demoing the Future of HTML5 Video", "http://www.readwriteweb.com/archives/sublimevideo_demoing_the_future_of_html5_video.php"
