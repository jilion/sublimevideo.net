          small.icon-calendar
          = "ReadWrite, "
          = l Time.parse("2010-02-02"), format: :date
      li.df
        = image_tag "news/logos/daringfireball.png", alt: "Daring Fireball", class: "l-li-logo"
        = link_to "Better in every single regard than any video player ever made with Flash.", "http://daringfireball.net/linked/2010/02/01/sublimevideo/"
        em.l-date
          small.icon-calendar
          = "Daring Fireball, "
          = l Time.parse("2010-02-01"), format: :date
    .break
    h3.title= "SublimeVideo Newsletters"
    ul.l-text-list.l-normal-font
      li
        = link_to "SublimeVideo Newsletter #4", "http://email.jilion.com/t/r-FA49D61FC8C7A41D2540EF23F30FEDED"
