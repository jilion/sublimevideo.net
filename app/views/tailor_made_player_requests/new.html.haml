- @body_class = "tailor_made_form"
- @page_title = "Tailor-made Players Partnerships - Contact form"

= content_for :header do
  %h2= "Tailor-made Players Partnerships - Contact form"
  %p.sub= "If you are interested to teaming up with us to design tailor-made players, please fill in the form below. We will contact you shortly."

.content_box
  .content_wrap
    .lights
      = form_for @tailor_made_player_request do |f|
        .entry
          = f.label :name, 'Your name'
          = f.text_field :name, class: 'text no_icon', required: true

        .entry
          = f.label :email, 'Email address'
          = f.text_field :email, class: 'text no_icon', required: true

        .entry
          = f.label :job_title, 'Job title'
          = f.text_field :job_title, class: 'text no_icon'

        .entry
          = f.label :company, 'Company', required: true
          = f.text_field :company, class: 'text no_icon'

        .entry
          = f.label :url, 'Website URL'
          = f.text_field :url, class: 'text no_icon'

        .entry.select
          = f.label :country, 'Country'
          = f.country_select :country, options_for_select("Country", selected: "Country")

        %h5= 'Please let us know about the topic of your request:'

        .radio_wrap
          = f.radio_button :topic, 'agency', required: true
          = f.label :topic_agency, 'I am an Agency and I would like to join the Partner program to design and sell tailor-made players to my customers.'

        .radio_wrap
          = f.radio_button :topic, 'standalone', required: true
          = f.label :topic_standalone, "I need a custom player for my site. Here's the name of my main agency:"
        .entry.indent= f.text_field :topic_standalone_detail, class: 'text no_icon'

        .radio_wrap
          = f.radio_button :topic, 'platform', required: true
          = f.label :topic_platform, 'I am a CMS, OVP or other platform and I would like to integrate SublimeVideo Player Technology in my platform.'

        .radio_wrap
          = f.radio_button :topic, 'other', required: true
          = f.label :topic_other, 'Other, please specify:'
        .entry.indent= f.text_field :topic_other_detail, class: 'text no_icon'

        .entry.textarea
          = f.label :description, 'How can we help you?'
          = f.text_area :description, class: 'text'

        .entry
          = f.label :document, 'Additional document (10MB max)'
          = f.file_field :document

        .actions.center
          = f.submit 'Submit', class: 'submit blue_button'
